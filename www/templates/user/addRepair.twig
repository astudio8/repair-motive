{% extends '/layout.twig' %}

{% block pageContent %}
    <div class="container">
        <div class="section">

            <div class="row">
                <div class="col l9 m9 s12">
                    <h4 class="blue-text">Add A Repair</h4>
                </div>

                <div class="col s3 dashboard-btn hide-on-small-and-down">
                    <a href="/dashboard" class="waves-effect waves-light grey darken-3 btn right">Dashboard</a>
                </div>
            </div>

            <div class="row">

                <div class="col l4 m6 s12">
                    {% include 'user/myCarsList.twig' %}
                </div>

                <div class="col offset-l1 l7 m6 s12">

                    {% if carCount < 1 %}
                        <div class='card-panel red lighten-1'>
                            <span class='white-text'> You'll need to add a vehicle before you can add repairs. <a href="/add-car" class="black-text">Add a vehicle here</a></span>
                        </div>
                    {% else %}

                    <h5 class="orange-text">Select the vehicle you'd like to add a repair to</h5>

                        <form class="col s12" id="add-repair-form" method="post">
                            <div class="row">
                                <div class="input-field col s12">
                                    <select id="vehicle" name="vehicle">
                                        <option value="" disabled selected>Select Vehicle</option>
                                        {% for myCar in cars %}
                                            <option value="{{ myCar.id }}">{{ myCar.car_year }} {{ myCar.car_make }} {{ myCar.car_model }}</option>
                                        {% endfor %}
                                    </select>
                                    <label for="vehicle">Vehicle</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col l10 m10 s12">
                                    <input id="item" class="repair-search browser-default" type="text" placeholder="Example: New Battery" name="item" autocomplete="off" data-list-highlight="true" data-list-value-completion="true">
                                    <label for="item">Item</label>
                                </div>

                                <div class="input-field col l2 m2 s12">
                                    <input id="itemCost" type="text" name="cost">
                                    <label for="itemCost">Cost</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col l12 m12 s12">
                                    <input id="mileage" type="text" placeholder="Optional" name="mileage">
                                    <label for="mileage">Mileage of Repair</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col l12 m12 s12">
                                    <input id="shopName" type="text" placeholder="Optional" name="shop_name">
                                    <label for="shopName">Garage Name</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col l12 m12 s12">
                                    <input id="shopAddy" type="text" placeholder="Optional" name="shop_address">
                                    <label for="shopAddy">Garage Address</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="waves-effect waves-light light-green darken-1 btn" id="add-repair-btn">Save Repair</button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12" id="add-repair-response"></div>
                            </div>

                        </form>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% extends '/layout.twig' %}

{% block pageContent %}

    <div class="container">
        <div class="section">

            <div class="row">

                <div class="col l6 m6 s12">
                    <h4 class="orange-text">Login</h4>

                    <form class="col s10" id="user-login-form" method="post">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="emailLogin" type="email" class="validate" name="email">
                                <label for="emailLogin" data-error="Please provide a valid Email" data-success="Looks good!">Email</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <input id="passwordLogin" type="password" class="validate" name="password">
                                <label for="passwordLogin">Password</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12" id="login-response"></div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <button class="waves-effect waves-light btn" id="login-btn">Login</button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <a href="/forgot-pass">Forgot your password?</a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col l6 m6 s12">
                    <h4 class="orange-text">Signup</h4>

                    <form class="col s12" id="signup-form" method="post">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate" name="email">
                                <label for="email" data-error="Please provide a valid Email" data-success="Looks good!">Email</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="password" class="validate" name="password">
                                <label for="password">Password</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <select id="country" name="country">
                                    <option value="" disabled selected>Choose your country</option>
                                    {% for country in countryList %}
                                        <option value="{{ country }}">{{ country }}</option>
                                    {% endfor %}
                                </select>
                                <label for="country">Country</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <input type="checkbox" id="agreement" name="agreement"/>
                                <label for="agreement">
                                    By signing up to this platform, you understand and agree to our <a href="/privacy" target="_blank">Privacy</a> and <a href="/terms" target="_blank">Terms</a>.
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12" id="signup-response"></div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <button class="waves-effect waves-light btn" id="signup-btn">Signup</button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
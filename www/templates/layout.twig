{% set version = '0.5.2' %}
<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons|Abel" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/bower_components/Materialize/dist/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/www/dist/css/style.min.css?v={{ version }}">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="Easily track and review car repairs over the years.">
    <meta name="subject" content="Automotive repair tracker.">
    <meta name="rating" content="General">

    <!-- Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#607d8b">

    <!-- Facebook -->
    <meta property="og:url"            content="http://repairmotive.com" />
    <meta property="og:type"           content="website" />
    <meta property="og:title"          content="RepairMotive | Track your car repairs online!" />
    <meta property="og:description"    content="Easily track and review car repairs over the years." />
    <meta property="og:image"          content="http://repairmotive.com/www/images/repairmotive-fb-og.jpg" />

    <title>RepairMotive | Track your car repairs online!</title>

    <link rel="dns-prefetch" href="//repairmotive.com/">
</head>

<body>

<nav class="blue-grey darken-3" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="/" class="brand-logo">RepairMotive</a>

        <ul class="right hide-on-med-and-down">
            {% if me.id == NULL %}
                <li><a href="/">Home</a></li>
                <li><a href="/login">Login / Signup</a></li>
                <li><a href="/about">About</a></li>
            {% else %}
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/add-repair">Add Repairs</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            {% endif %}
            <li><a href="/contact">Contact Us</a></li>
        </ul>

        <ul id="nav-mobile" class="side-nav">
            {% if me.id == NULL %}
                <li><a href="/">Home</a></li>
                <li><a href="/login">Login / Signup</a></li>
                <li><a href="/about">About</a></li>
            {% else %}
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/view-repairs">List Repairs</a></li>
                <li><a href="/add-repair">Add Repairs</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            {% endif %}
            <li><a href="/contact">Contact Us</a></li>
        </ul>

        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
</nav>

{% block pageContent %}{% endblock %}

<footer class="page-footer blue-grey">
    <div class="container">
        <div class="row">

            <div class="col l6 s12">
                <h5 class="white-text">RepairMotive</h5>
                <p class="grey-text text-lighten-4">
                    This platform is currently in Beta, while we're working towards a stable app we do expect some occasional bugs. We'd LOVE for you
                    to <a href="/contact" class="black-text">report them</a> so we can make this better for you and others.
                </p>
            </div>

            <div class="col l3 s12">
                <h5 class="white-text">Learn More</h5>
                <ul>
                    <li><a class="black-text" href="/faq">FAQ</a></li>
                    <li><a class="black-text" href="/terms">Terms</a></li>
                    <li><a class="black-text" href="/privacy">Privacy</a></li>
                </ul>
            </div>
            <div class="col l3 s12">
                <h5 class="white-text">Your Garage</h5>
                <ul>
                    <li><a class="black-text" href="/view-repairs">My Repairs</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div class="row">
                <div class="col l6 m6 s12">
                    Developed by <a href="http://8thstudio.com" class="orange-text text-lighten-3">Phase 8 Studio</a> | Copyright 2016
                </div>

                <div class="col l6 m6 s12 right-align">
                    version {{ version }}
                </div>
            </div>
        </div>
    </div>
</footer>

<script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="/bower_components/Materialize/dist/js/materialize.min.js"></script>
<script type="text/javascript" src="/bower_components/remote-list/dist/remote-list.min.js" async></script>
<script type="text/javascript" src="/www/dist/js/app.min.js?v={{ version }}" async></script>
</body>
</html>
